<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/details_card_view_DA"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardCornerRadius="1dp"
        android:layout_marginTop="20dp"
        style="@style/CardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bank_title_DA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aльфа-Банк"
                style="@style/Bank_Title_Detailed"
                />
            <TextView
                android:id="@+id/bank_site_DA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Официальный сайт банка:"
                style="@style/Main_Text"/>
            <TextView
                android:id="@+id/bank_site_Url_DA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.alfabank.ua"
                style="@style/Main_Text"/>
            <TextView
                android:id="@+id/intenet_banking_DA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Интернет-банкинг"
                style="@style/Main_Text"/>
            <TextView
                android:id="@+id/bank_adress_DA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Адрес"
                style="@style/Main_Text"/>
            <TextView
                android:id="@+id/hotLine_DA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Горячая линия"
                style="@style/Main_Text"/>
            <TextView
                android:id="@+id/info_DA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="круглосуточно(без выходных)"
                style="@style/Main_Text"/>
            <TextView
                android:id="@+id/phone_number_DA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Телефон"
                style="@style/Main_Text"/>
            <TextView
                android:id="@+id/phone_number_foreign_DA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Телефон"
                style="@style/Main_Text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="звонки из-за границы"
                style="@style/Main_Text"/>
            <TextView
                android:id="@+id/email_DA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e-mail"
                android:layout_marginBottom="20dp"
                style="@style/Main_Text"/>



        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/details_card_view_text_DA"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardCornerRadius="1dp"
        android:layout_marginTop="20dp"
        style="@style/CardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/currency_Name_DA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название валюты"
                android:layout_marginTop="5dp"
                style="@style/Main_Text"/>
            <TextView
                android:id="@+id/bid_ask_DA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:text="покупка/продажа" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/currency_card_view_DA"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardCornerRadius="1dp"
        android:layout_marginTop="20dp"
        style="@style/CardView">

        <ListView
            android:id="@+id/lvMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>





    </android.support.v7.widget.CardView>
</LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"/>

</RelativeLayout>