<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardCornerRadius="1dp"

        style="@style/CardView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Альфа-Банк"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"/>
            <TextView
                android:layout_below="@+id/info_text"
                android:id="@+id/info_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Закарпатская область"
                android:layout_marginLeft="10dp"
                android:paddingBottom="5dp"
                android:textSize="15dp" />
            <TextView
                android:layout_below="@+id/info_text2"
                android:id="@+id/info_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ужгород"
                android:layout_marginLeft="10dp"
                android:paddingBottom="20dp"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/info_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Тел:044 92 816 15"
                android:layout_marginRight="20dp"
                android:textSize="15dp"
                android:layout_below="@+id/info_text3" />
            <TextView
                android:layout_below="@+id/info_text4"
                android:id="@+id/info_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="Адрес: ул.Десятичная,20"
                android:textSize="15dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_gravity="bottom"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="4"
            android:orientation="horizontal"
            android:background="#835c6565">

            <ImageButton

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_link"
                android:scaleType="centerInside"
                android:background="#00000000"
                android:paddingLeft="10dp"

                android:layout_gravity="center" />
            <ImageButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_map"
                android:scaleType="centerInside"
                android:background="#00000000"
                android:layout_gravity="center" />
            <ImageButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone"
                android:scaleType="centerInside"
                android:background="#00000000"
                android:layout_gravity="center" />
            <ImageButton
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:paddingRight="10dp"
                android:scaleType="centerInside"
                android:scaleX="0.5"
                android:scaleY="0.5"


                android:background="#00000000"
                android:layout_gravity="center" />
        </LinearLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>